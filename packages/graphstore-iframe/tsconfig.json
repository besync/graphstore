{
  /* this file generally used for IDE such as Visual Studio Code only 
  use tsconfig.build.json when building */
  "extends": "./../../tsconfig.json",
  "compilerOptions": {
    "rootDirs": ["src", "src/__tests__"],
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true
  }
}
